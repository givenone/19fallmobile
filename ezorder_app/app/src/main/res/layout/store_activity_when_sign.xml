<?xml version="1.0" encoding="utf-8"?>
<!--This is sign page when store-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

<!--        to include image-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/store_black_bg" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/logo_red" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner_input_text"
                android:drawableLeft="@drawable/ic_shapes_2"
                android:drawablePadding="16dp"
                android:hint="E-MAIL"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner_input_text"
                android:drawableLeft="@drawable/ic_shape_1"
                android:drawablePadding="16dp"
                android:hint="USERNAME"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner_input_text"
                android:drawableLeft="@drawable/ic_tool_6"
                android:drawablePadding="16dp"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner_input_text"
                android:drawableLeft="@drawable/ic_shape_phone"
                android:drawablePadding="16dp"
                android:hint="PHONE"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner_input_text"
                android:drawableLeft="@drawable/ic_shape_store"
                android:drawablePadding="16dp"
                android:hint="STORE NAME"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/store_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner_input_text"
                android:drawableLeft="@drawable/ic_shape_info"
                android:drawablePadding="16dp"
                android:hint="STORE INFO"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom">
                <Button
                    android:id="@+id/store_signup_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ez_red"
                    android:text="Sign Up"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>

