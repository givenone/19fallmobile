<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/listview_order_store_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listview_order_store_menuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Store Name"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/listview_order_store_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="User Nickname"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/listview_order_store_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Created : "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/listview_order_store_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Requests : "
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/listview_order_store_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Amounts : "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/listview_order_store_takeout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Takeout : "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/listview_order_store_expectedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected time"
                    android:textSize="14dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dp" />
                <Button
                    android:id="@+id/listview_manage_orders_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="confirm"
                    android:layout_gravity="right"/>
                <Button
                    android:id="@+id/listview_manage_orders_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="detail" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>