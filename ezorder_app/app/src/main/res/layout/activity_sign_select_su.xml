<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">



    <RadioGroup
        android:id="@+id/SU"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/SU_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"  />
        <RadioButton
            android:id="@+id/SU_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/gradient_red">

            <TextView
                android:id="@+id/choose_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/roboto"
                android:text="Do you want to sign up as a customer or register your store?"
                android:textColor="@android:color/white"
                android:textSize="25sp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">


            <!--                android:text="USER" -->


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/user_black" />

            <TextView
                android:id="@+id/SU_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USER " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">


            <!--            android:text="STORE"-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/store_black" />

            <TextView
                android:id="@+id/SU_store_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="STORE " />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

            <Button
                android:id="@+id/SU_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ez_red"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="18dp"/>

        </RelativeLayout>

    </RadioGroup>

</RelativeLayout>