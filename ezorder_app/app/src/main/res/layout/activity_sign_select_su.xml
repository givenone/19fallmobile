<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/sign_select_prompt"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gradient_red">

        <TextView
            android:id="@+id/choose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/roboto"
            android:text="Do you want to sign up as a customer or register your store?"
            android:textColor="@android:color/white"
            android:textSize="25sp" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/sign_select_prompt">

        <RadioGroup
            android:id="@+id/SU"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/SU_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER "
                android:drawableBottom="@drawable/user_black"
                android:layout_margin="25dp" />

            <RadioButton
                android:id="@+id/SU_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/store_black"
                android:text="STORE "
                android:layout_margin="20dp" />

        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/SU_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ez_red"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>