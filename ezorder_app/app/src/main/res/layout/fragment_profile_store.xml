<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".edit_my_store">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff">

                <!-- Cover Image -->
                <ImageView
                    android:id="@+id/store_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/store_banner_sample" />

                <!-- Round profile image -->
                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/store_profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/store_profile_sample"
                    android:layout_marginTop="75dp"
                    android:layout_gravity="center"
                    app:view_borderWidth="2dp"
                    app:view_borderColor="#cccccc" />

            </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <TextView
                android:id="@+id/store_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Bean"
                android:textSize="22dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/store_username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Username: givenone"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="-------------------------"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/store_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Email: givenone@snu.ac.kr"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/store_phone_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: 02-882-3101"
                android:textSize="14dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/store_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Information: Escape your routine at the bean!"
                android:textSize="14dp" />

        </LinearLayout>

            <Button
                android:id="@+id/edit_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:gravity="center"
                android:padding="10dp"
                android:text="EDIT PROFILE"
                android:textAlignment="center"
                android:textColor="@color/ez_red_light" />

            <Button
                android:id="@+id/edit_menu_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:background="@drawable/round_corner_2"
                android:gravity="center"
                android:padding="10dp"
                android:text="EDIT MENU"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>